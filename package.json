{
    "name": "notes-client",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "bin": {
        "notes": "./index.js",
        "notes-bin": "run"
    },
    "scripts": {
        "start": "tsx index.js",
        "faker:note:1": "tsx ./index.js add --title=\"Minha nota\" --content=\"Conteúdo\"",
        "faker:note:2": "tsx watch --exclude \"./*.js\"  --exclude \"./*.ts\" --exclude \"./data/**/*\" --exclude \"./node_modules/**/*\"  ./index.js add --title=\"Minha nota\" --content=\"Conteúdo\"",
        "style:out": "prettier --config .prettierrc .",
        "style:fix": "prettier --config .prettierrc -w .",
        "watch:and:start": "tsx watch --exclude \"./*.js\"  --exclude \"./*.ts\" --exclude \"./data/**/*\" --exclude \"./node_modules/**/*\"  ./index.js",
        "watch:and:start:1": "watch --interval 1 --color --exec ./run.sh ./*.js",
        "watch:and:start:2": "watch --interval 1 --color --exec ./run.sh ./*.{js,ts}",
        "watch:and:start:3": "tsx watch --exclude \"./data/**/*\" --exclude \"./node_modules/**/*\"  ./index.js"
    },
